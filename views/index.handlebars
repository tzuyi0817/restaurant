<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="button mt-2">
        <button type="submit" class="btn btn-primary"><a class="create" href="/restaurants/new">新增一家餐廳進入名單</a></button>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">排序方式</button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/sort/rating">餐廳評分</a>
            <a class="dropdown-item" href="/sort/category">餐廳類別</a>
            <a class="dropdown-item" href="/sort/asc">A > Z (升冪)</a>
            <a class="dropdown-item" href="/sort/desc">Z > A (降冪)</a>
          </div>
        </div>
        <div class="card-columns mt-3">
          {{#each restaurants}}
          <a href="/restaurants/{{id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{image}}" alt="{{name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

                <div class="row justify-content-end mt-2">
                  <div class="edit">
                    <a href="/restaurants/{{id}}/edit">編輯</a>
                  </div>
                  <div class="detail">
                    <a href="/restaurants/{{id}}">詳細資料</a>
                  </div>
                  <form action="/restaurants/{{id}}/delete?_method=DELETE" method="POST">
                    <div class="delete">
                      <button>
                        <i class="fa fa-trash" aria-hidden="true"></i>
                      </button>
                    </div>
                  </form>
                </div>

              </div>
            </div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>